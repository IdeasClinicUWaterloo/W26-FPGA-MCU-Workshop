library IEEE;
use IEEE.STD_LOGIC_1164.ALL;
use IEEE.NUMERIC_STD.ALL;

entity numeric_display is
	Port (
		num: in UNSIGNED(3 downto 0);
		pos_x, pos_y: in INTEGER;	-- top-left corner of text display
		hcount, vcount: in UNSIGNED(11 downto 0)		
	);
end numeric_display;

architecture behavioural of numeric_display is
	type CHAR_BITBAP is array(11 downto 0) of STD_LOGIC_VECTOR(7 downto 0); -- 8x12 character bitmap type
begin
	
end behavioural;